<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistaVideojuego">

    <TextView
        android:id="@+id/textView_desarrolladora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Desarrolladora"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_crear_videojuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/textView_desarrolladora"
        app:layout_constraintStart_toStartOf="@+id/textView_desarrolladora"
        app:layout_constraintTop_toBottomOf="@+id/textView_desarrolladora" />

    <ListView
        android:id="@+id/lv_videojuegos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Lista de Videojuegos"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_videojuego"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_videojuego"
        app:layout_constraintTop_toBottomOf="@+id/btn_crear_videojuego" />

</androidx.constraintlayout.widget.ConstraintLayout>